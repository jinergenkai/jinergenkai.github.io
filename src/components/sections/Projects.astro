---
import { projects } from "@/data/projects";
import LinkButton from "@/components/LinkButton.astro";
import IconGitHub from "@/assets/icons/IconGitHub.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";

const featuredProjects = projects.filter(p => p.featured);
const otherProjects = projects.filter(p => !p.featured);

const statusLabel: Record<string, string> = {
  active: 'Đang hoạt động',
  'in-progress': 'Đang phát triển',
  completed: 'Hoàn thành',
};
const statusColor: Record<string, string> = {
  active: 'text-accent border-accent/30 bg-accent/10',
  'in-progress': 'text-yellow-500 border-yellow-500/30 bg-yellow-500/10',
  completed: 'text-muted-foreground border-border/30 bg-muted/10',
};
---

<section id="projects" class="py-10">
  <div class="mb-6 flex items-center gap-3">
    <h2 class="text-sm font-bold tracking-widest text-accent uppercase">Dự án</h2>
    <div class="h-px flex-1 bg-border/20"></div>
  </div>

  <!-- Featured projects grid -->
  <div class="grid gap-4 sm:grid-cols-2">
    {featuredProjects.map(project => (
      <div class="group relative flex flex-col rounded-xl border border-border/20 bg-muted/10 p-5 transition-all duration-200 hover:border-accent/20 hover:bg-muted/20 hover:-translate-y-0.5">
        <!-- Status badge -->
        <span class:list={["mb-3 self-start rounded-full border px-2.5 py-0.5 font-cartograph text-xs", statusColor[project.status]]}>
          {statusLabel[project.status]}
        </span>

        <h3 class="mb-2 font-semibold text-foreground group-hover:text-accent transition-colors">
          {project.title}
        </h3>
        <p class="mb-4 flex-1 text-sm text-muted-foreground leading-relaxed">
          {project.description}
        </p>

        <!-- Tech stack -->
        <div class="mb-4 flex flex-wrap gap-1.5">
          {project.technologies.map(tech => (
            <span class="rounded-md border border-border/20 bg-background/50 px-2 py-0.5 font-cartograph text-xs text-muted-foreground">
              {tech}
            </span>
          ))}
        </div>

        <!-- Links -->
        <div class="flex gap-3">
          {project.links.github && (
            <LinkButton
              href={project.links.github}
              target="_blank"
              class="inline-flex items-center gap-1.5 text-xs text-muted-foreground hover:text-accent transition-colors"
            >
              <IconGitHub class="size-3.5" />
              GitHub
            </LinkButton>
          )}
          {project.links.article && (
            <LinkButton
              href={project.links.article}
              class="inline-flex items-center gap-1.5 text-xs text-muted-foreground hover:text-accent transition-colors"
            >
              <IconArrowRight class="size-3.5" />
              Bài viết
            </LinkButton>
          )}
        </div>
      </div>
    ))}
  </div>

  <!-- Other projects list -->
  {otherProjects.length > 0 && (
    <div class="mt-4 space-y-2">
      {otherProjects.map(project => (
        <div class="flex items-center gap-3 rounded-lg border border-border/10 bg-muted/5 px-4 py-3 transition-all hover:border-border/30 hover:bg-muted/10">
          <span class:list={["h-2 w-2 flex-shrink-0 rounded-full", {
            'bg-accent': project.status === 'active',
            'bg-yellow-500': project.status === 'in-progress',
            'bg-muted-foreground/40': project.status === 'completed',
          }]}></span>
          <span class="flex-1 text-sm font-medium text-foreground">{project.title}</span>
          <span class="hidden sm:block text-xs text-muted-foreground max-w-[250px] truncate">{project.description.split(',')[0]}</span>
        </div>
      ))}
    </div>
  )}
</section>
