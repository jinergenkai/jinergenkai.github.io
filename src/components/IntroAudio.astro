---
/**
 * IntroAudio — Reproductor de audio de marca/intro del blog.
 * Activable desde SITE.introAudio.enabled en config.ts.
 * Estética terminal/cyberpunk coherente con el resto de la UI.
 */
interface Props {
  src: string;
  label?: string;
  duration?: number;
}

const { src, label = "INTRO.MP3", duration = 30 } = Astro.props;
---

<div
  id="intro-audio-player"
  class="intro-audio-wrap"
  aria-label="Reproductor de audio intro"
>
  <!-- Indicador de tipo terminal -->
  <span class="intro-audio-prefix" aria-hidden="true">$</span>
  <span class="intro-audio-cmd" aria-hidden="true">play</span>

  <!-- Botón play/pause -->
  <button
    id="intro-audio-btn"
    class="intro-audio-btn"
    aria-label="Reproducir audio de introducción"
    type="button"
  >
    <!-- Ícono play -->
    <svg
      id="intro-icon-play"
      class="intro-icon"
      viewBox="0 0 16 16"
      fill="currentColor"
      aria-hidden="true"
    >
      <path
        d="M3 2.5a.5.5 0 0 1 .765-.424l10 5.5a.5.5 0 0 1 0 .848l-10 5.5A.5.5 0 0 1 3 13.5v-11z"
      ></path>
    </svg>
    <!-- Ícono pause -->
    <svg
      id="intro-icon-pause"
      class="intro-icon hidden"
      viewBox="0 0 16 16"
      fill="currentColor"
      aria-hidden="true"
    >
      <path
        d="M5.5 3.5A1.5 1.5 0 0 1 7 5v6a1.5 1.5 0 0 1-3 0V5a1.5 1.5 0 0 1 1.5-1.5zm5 0A1.5 1.5 0 0 1 12 5v6a1.5 1.5 0 0 1-3 0V5a1.5 1.5 0 0 1 1.5-1.5z"
      ></path>
    </svg>
  </button>

  <!-- Barras de onda (animadas durante reproducción) -->
  <div class="intro-waveform" id="intro-waveform" aria-hidden="true">
    {
      Array.from({ length: 8 }).map((_, i) => (
        <span
          class="intro-wave-bar"
          style={`--delay: ${i * 0.07}s; --h: ${[55, 80, 40, 95, 65, 85, 45, 70][i]}%`}
        />
      ))
    }
  </div>

  <!-- Barra de progreso -->
  <div
    class="intro-progress-track"
    id="intro-progress-track"
    role="progressbar"
    aria-valuenow={0}
    aria-valuemin={0}
    aria-valuemax={duration}
    aria-label="Progreso del audio"
  >
    <div class="intro-progress-bar" id="intro-progress-bar"></div>
  </div>

  <!-- Tiempo -->
  <span class="intro-time" id="intro-time" aria-live="off">
    <span id="intro-current">0:00</span><span class="opacity-30"> /</span><span
      class="opacity-30"
    >
      {Math.floor(duration / 60)}:{String(duration % 60).padStart(2, "0")}</span
    >
  </span>

  <!-- Etiqueta del archivo -->
  <span class="intro-label" aria-label={`Archivo: ${label}`}>{label}</span>

  <!-- Elemento audio nativo (oculto) -->
  <audio id="intro-audio-el" preload="metadata" aria-hidden="true">
    <source src={src} type="audio/mpeg" />
    Tu navegador no soporta el elemento audio.
  </audio>
</div>

<style>
  .intro-audio-wrap {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.45rem 0.9rem;
    border-radius: 0.6rem;
    border: 1px solid color-mix(in oklab, var(--border) 40%, transparent);
    background: color-mix(in oklab, var(--muted) 10%, transparent);
    font-family: var(--font-cartograph, monospace);
    font-size: 0.72rem;
    color: var(--foreground);
    transition:
      border-color 0.3s,
      background 0.3s;
    max-width: 100%;
    backdrop-filter: blur(4px);
  }

  .intro-audio-wrap:has(#intro-audio-el:not([data-paused])).is-playing {
    border-color: color-mix(in oklab, var(--accent) 55%, transparent);
    background: color-mix(in oklab, var(--accent) 6%, transparent);
  }

  /* estado playing aplicado por JS */
  .intro-audio-wrap.playing {
    border-color: color-mix(in oklab, var(--accent) 55%, transparent);
    background: color-mix(in oklab, var(--accent) 6%, transparent);
    box-shadow: 0 0 18px -4px
      color-mix(in oklab, var(--accent) 20%, transparent);
  }

  .intro-audio-prefix {
    color: var(--accent);
    opacity: 0.5;
    user-select: none;
  }
  .intro-audio-cmd {
    color: var(--accent);
    opacity: 0.7;
    user-select: none;
    letter-spacing: 0.03em;
  }

  /* ── Botón play/pause ── */
  .intro-audio-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 1.6rem;
    height: 1.6rem;
    border-radius: 50%;
    border: 1px solid color-mix(in oklab, var(--accent) 50%, transparent);
    background: color-mix(in oklab, var(--accent) 12%, transparent);
    color: var(--accent);
    cursor: pointer;
    flex-shrink: 0;
    transition:
      background 0.2s,
      border-color 0.2s,
      transform 0.15s;
    outline: none;
  }

  .intro-audio-btn:hover {
    background: color-mix(in oklab, var(--accent) 22%, transparent);
    border-color: var(--accent);
    transform: scale(1.1);
  }

  .intro-audio-btn:focus-visible {
    outline: 2px dashed var(--accent);
    outline-offset: 2px;
  }

  .intro-icon {
    width: 0.65rem;
    height: 0.65rem;
  }

  .hidden {
    display: none !important;
  }

  /* ── Barras de onda ── */
  .intro-waveform {
    display: flex;
    align-items: center;
    gap: 2px;
    height: 1rem;
  }

  .intro-wave-bar {
    display: block;
    width: 2px;
    border-radius: 999px;
    background: var(--accent);
    height: 30%;
    opacity: 0.35;
    transition: opacity 0.3s;
  }

  /* animación activa */
  .playing .intro-wave-bar {
    opacity: 0.8;
    animation: wave-bounce 0.6s ease-in-out infinite alternate;
    animation-delay: var(--delay, 0s);
  }

  @keyframes wave-bounce {
    from {
      height: 20%;
    }
    to {
      height: var(--h, 80%);
    }
  }

  /* ── Barra de progreso ── */
  .intro-progress-track {
    position: relative;
    height: 3px;
    width: 7rem;
    border-radius: 999px;
    background: color-mix(in oklab, var(--border) 30%, transparent);
    flex-shrink: 0;
    cursor: pointer;
    overflow: hidden;
  }

  @media (max-width: 480px) {
    .intro-progress-track {
      width: 4.5rem;
    }
    .intro-label {
      display: none;
    }
  }

  .intro-progress-bar {
    height: 100%;
    width: 0%;
    border-radius: 999px;
    background: linear-gradient(
      90deg,
      var(--accent) 0%,
      color-mix(in oklab, var(--accent) 70%, var(--foreground)) 100%
    );
    transition: width 0.25s linear;
  }

  /* ── Tiempo ── */
  .intro-time {
    font-variant-numeric: tabular-nums;
    font-size: 0.68rem;
    color: var(--foreground);
    opacity: 0.6;
    white-space: nowrap;
    flex-shrink: 0;
  }

  /* ── Etiqueta ── */
  .intro-label {
    font-size: 0.65rem;
    letter-spacing: 0.08em;
    color: var(--accent);
    opacity: 0.55;
    text-transform: uppercase;
    user-select: none;
    white-space: nowrap;
  }
</style>

<script>
  function initIntroAudio() {
    const wrap = document.getElementById(
      "intro-audio-player"
    ) as HTMLElement | null;
    const audio = document.getElementById(
      "intro-audio-el"
    ) as HTMLAudioElement | null;
    const btn = document.getElementById(
      "intro-audio-btn"
    ) as HTMLButtonElement | null;
    const iconPlay = document.getElementById(
      "intro-icon-play"
    ) as SVGElement | null;
    const iconPause = document.getElementById(
      "intro-icon-pause"
    ) as SVGElement | null;
    const bar = document.getElementById(
      "intro-progress-bar"
    ) as HTMLElement | null;
    const track = document.getElementById(
      "intro-progress-track"
    ) as HTMLElement | null;
    const current = document.getElementById(
      "intro-current"
    ) as HTMLElement | null;

    if (!wrap || !audio || !btn) return;

    const pad = (n: number) => String(n).padStart(2, "0");
    const fmt = (secs: number) => {
      const s = Math.floor(secs);
      return `${Math.floor(s / 60)}:${pad(s % 60)}`;
    };

    const setPlaying = (playing: boolean) => {
      wrap.classList.toggle("playing", playing);
      iconPlay?.classList.toggle("hidden", playing);
      iconPause?.classList.toggle("hidden", !playing);
      btn.setAttribute(
        "aria-label",
        playing
          ? "Pausar audio de introducción"
          : "Reproducir audio de introducción"
      );
    };

    btn.addEventListener("click", () => {
      if (audio.paused) {
        audio.play().catch(() => {
          /* autoplay bloqueado, ignorar */
        });
      } else {
        audio.pause();
      }
    });

    audio.addEventListener("play", () => setPlaying(true));
    audio.addEventListener("pause", () => setPlaying(false));
    audio.addEventListener("ended", () => {
      setPlaying(false);
      if (bar) bar.style.width = "0%";
      if (current) current.textContent = "0:00";
      if (track) track.setAttribute("aria-valuenow", "0");
      audio.currentTime = 0;
    });

    audio.addEventListener("timeupdate", () => {
      const total = audio.duration || 0;
      const now = audio.currentTime;
      const pct = total > 0 ? (now / total) * 100 : 0;
      if (bar) bar.style.width = `${pct}%`;
      if (current) current.textContent = fmt(now);
      if (track) track.setAttribute("aria-valuenow", String(Math.floor(now)));
    });

    // Clic en la barra de progreso para saltar
    track?.addEventListener("click", (e: MouseEvent) => {
      const rect = track.getBoundingClientRect();
      const ratio = (e.clientX - rect.left) / rect.width;
      const total = audio.duration || 0;
      if (total > 0) {
        audio.currentTime = ratio * total;
      }
    });
  }

  // Compatible con View Transitions de Astro
  document.addEventListener("astro:page-load", initIntroAudio);
</script>
